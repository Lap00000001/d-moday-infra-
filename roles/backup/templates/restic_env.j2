# roles/backup/templates/restic_env.j2
# Generated by Ansible from group_vars/all.yml

RESTIC_REPOSITORY="{{ restic_repository }}"
RESTIC_PASSWORD="{{ restic_password }}"
{% if restic_aws_key is defined and restic_aws_secret is defined %}
AWS_ACCESS_KEY_ID="{{ restic_aws_key }}"
AWS_SECRET_ACCESS_KEY="{{ restic_aws_secret }}"
{% endif %}

# Optional SSH target credentials (if you use sftp/sftp-repo)
{% if backup_ssh_user is defined %}
BACKUP_SSH_USER="{{ backup_ssh_user }}"
{% endif %}
{% if backup_ssh_key is defined %}
BACKUP_SSH_KEY="{{ backup_ssh_key }}"
{% endif %}
